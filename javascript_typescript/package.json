{
  "name": "interviews_ts",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "author": "",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "publish": "zip -r out.zip . -x 'node_modules/*' 'src/problems/**/*' '.idea' '.idea/*' '.git' '.git/*'"
  },
  "dependencies": {
    "reflect-metadata": "0.2.2",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-transform-modules-commonjs": "^7.24.7",
    "@babel/preset-env": "7.24.7",
    "@types/jest": "29.5.12",
    "@types/node": "18.11.9",
    "babel-jest": "29.7.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.5",
    "ts-node": "10.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "./test/jest/reflect.ts"
    ],
    "setupFilesAfterEnv": [],
    "testRegex": ".spec.(j|t)s$",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
